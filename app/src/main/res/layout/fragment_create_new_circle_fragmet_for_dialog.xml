<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.CreateNewCircleFragmetForDialog">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>
 <EditText
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_margin="16dp"
     android:id="@+id/circle_name"
     app:layout_constraintTop_toBottomOf="@id/guideline"
     app:layout_constraintStart_toStartOf="parent"
     android:textAlignment="center"
     android:hint="Name Your Circle"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:text="Continue"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/circle_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suggesion"
       app:layout_constraintTop_toBottomOf="@id/btn_continue"
        style="@style/TextAppearance.AppCompat.Title"

       android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="SUGGESTIONS"/>
    <ListView
        android:id="@+id/suggesion_list"
        style="@style/TextAppearance.AppCompat.Caption"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/suggesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>